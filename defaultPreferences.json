/*
 * Isso é um arquivo de somente leitura contendo as preferências suportadas
 * pelo Brackets.
 * Utilize este arquivo como referência para ajustar e modificar suas preferências no
 * arquivo "brackets.json" aberto em outro painel.
 * Para saber mais sobre como usar as preferências do
 * Brackets, pode consultar a página web https://github.com/adobe/brackets/wiki/How-to-Use-Brackets#preferences
 */

{
	"brackets-icons.icons": {},

	// Padrão: ionicons
	"brackets-icons.iconset": "ionicons",

	// Padrão: true
	"brackets-icons.secondary": true,

	// If the value of this preference is true, Indent Guides will be visible. If the value is false, Indent Guides will be hidden.
	"brackets-indent-guides.enabled": false,

	// The color of the indent guides. Can be any valid CSS Color value.
	"brackets-indent-guides.guideColor": "rgba(128, 128, 128, 0.5)",

	// This value determines the style of the guide: "solid" or "dotted".
	"brackets-indent-guides.guideStyle": "solid",

	// If the value of this preference is true the first Indent Guide will not be drawn.
	"brackets-indent-guides.hideFirst": false,

	// verdadeiro (true) para fechar chaves, colchetes e parênteses automáticamente
	"closeBrackets": true,

	// falso (false) para remover  "Fechar outros acima" do menu de contexto Arquivos abertos
	"closeOthers.above": true,

	// falso (false) para remover "Fechar outros abaixo" do menu de contexto Arquivos abertos
	"closeOthers.below": true,

	// falso (false) para remover "Fechar outros" do menu de contexto Arquivos abertos
	"closeOthers.others": true,

	// Definir opções de fechamento de tags
	"closeTags": {
		// Uma matriz de tags não deve ser automáticamente fechada
		"dontCloseTags": [],

		// Um vetor de tags terá uma linha em branco entre as tags quando for aberta
		"indentTags": [],

		// Fechar / quando o fechamento da tag for digitada
		"whenClosing": true,

		// Fechar > quando a abertura da tag for digitada
		"whenOpening": true
	},

	// verdadeiro (true) para sempre gerar marcadores de agrupamento quando o nível de identação mudar
	"code-folding.alwaysUseIndentFold": false,

	// verdadeiro (true) para habilitar o agrupamento de código
	"code-folding.enabled": true,

	// verdadeiro (true) para fazer que os marcadores de agrupamento de seção visíveis somente quando o cursor sai da área de edição pelo painel da esquerda
	"code-folding.hideUntilMouseover": false,

	// true to enable code folding on selected text in the editor
	"code-folding.makeSelectionsFoldable": true,

	// Limite de quantos níveis de Agrupar Todos pode agrupar
	"code-folding.maxFoldLevel": 2,

	// Mínimo de linhas antes de um ícone agrupamento de seção surgir
	"code-folding.minFoldSize": 2,

	// verdadeiro (true) para lembrar o estado de uma seção agrupada caso você feche e reabra um arquivo ou projeto
	"code-folding.saveFoldStates": true,

	// Habilitar/Desabilitar as sugestões de atributos HTML
	"codehint.AttrHints": true,

	// Habilitar/Desabilitar as sugestões de atributos CSS/LESS/SCSS
	"codehint.CssPropHints": true,

	// Habilitar/Desabilitar as sugestões de atributos JavaScript
	"codehint.JSHints": true,

	// Habilitar/Desabilitar as sugestões de preferências de código
	"codehint.PrefHints": true,

	// Habilitar/Desabilitar as sugestões de código SVG
	"codehint.SVGHints": true,

	// Habilitar/Desabilitar as sugestões de entidades HTML
	"codehint.SpecialCharHints": true,

	// Habilitar/Desabilitar as sugestões de tags HTML
	"codehint.TagHints": true,

	// Habilitar/Desabilitar as sugestões URL dentro de HTML & CSS/LESS/SCSS
	"codehint.UrlCodeHints": true,

	// verdadeiro (true) para mostrar os erros na barra de status
	"debug.showErrorsInStatusBar": false,

	// Habilitar/Desabilitar funcionalidade Drag & Drop/Arrastar & Soltar
	"dragDropText": false,

	// verdadeiro (true) para habilitar busca instantânea
	"findInFiles.instantSearch": true,

	// verdadeiro (true) para habilitar a búsca baseada em nós/node
	"findInFiles.nodeSearch": true,

	// Alterar fonte
	"fonts.fontFamily": "'SourceCodePro-Medium', ＭＳ ゴシック, 'MS Gothic', monospace",

	// Alterar o tamanho da fonte; e.g. 13px
	"fonts.fontSize": "12px",

	// Somente para Mac: "subpixel-antialiased" para habilitar sub-pixel antialiasing ou "antialiased" para gray scale antialiasing / antialiasing com escala de cinza
	"fonts.fontSmoothing": "subpixel-antialiased",

	// Habilitar rastreamento de dados de saúde
	"healthData.healthDataTracking": true,

	// Habilitar highlighting automático de palavras ao longo do documento
	"highlightMatches": false,

	// true to enable indenting of line comments
	"indentLineComment": false,

	// verdadeiro (true) para inserir a sugestão de código ao pressionar tab
	"insertHintOnTab": false,

	// Uma lista de arquivos que foram detectados problemas fazem o Tern não funcionar corretamente
	"jscodehints.detectedExclusions": [],

	// Quantidade de vezes que o Tern deixará de tentar de compreender os arquivos
	"jscodehints.inferenceTimeout": 30000,

	// verdadeiro (true) para não mostrar automáticamente dicas para JS quando  . for digitado
	"jscodehints.noHintsOnDot": false,

	// Enable/disable datatype details in JavaScript code hints
	"jscodehints.typedetails": true,

	// Um objeto com valores padrões para JSLint
	"jslint.options": {
		// verdadeiro (true) para permitir expressões de atribuição
		"ass": false,

		// verdadeiro (true) para permitir operadores bitwise
		"bitwise": false,

		// verdadeiro (true) se as funçõesvariáveis globais do navegador devem ser predefinidos
		"browser": false,

		// verdadeiro (true) para permitir expressões idiomáticas do Google Closure
		"closure": false,

		// verdadeiro (true) para permitir a declaração  "continue"
		"continue": false,

		// verdadeiro (true) se as funções/variáveis globais do CouchDB devem ser predefinidos
		"couch": false,

		// verdadeiro (true) para permitir as declarações do debugger
		"debug": false,

		// verdadeiro (true) se as funções/variáveis globais de desenvolvimento no navegador devem ser predefinidos
		"devel": false,

		// verdadeiro (true) para permitir == e !=
		"eqeq": false,

		// verdadeiro (true) se as funções/variáveis globais ES6 devem ser predefinidos
		"es6": false,

		// verdadeiro (true) para permitir eval
		"evil": false,

		// verdadeiro (true) para permitir "for ... in" não filtrados
		"forin": false,

		// Designar uma largura identação específica para o tab
		"indent": 0,

		// Número máximo de advertências reportadas
		"maxerr": 0,

		// Número máximo de caracteres por linha
		"maxlen": 0,

		// verdadeiro (true) para permitir construtores não capitalizados/sem maiúsculas
		"newcap": false,

		// verdadeiro (true) se as funções/variáveis globais do NodeJS devem ser predefinidos
		"node": false,

		// verdadeiro (true) para permitir sublinhados a frente dos identificadores
		"nomen": false,

		// verdadeiro (true) para para no primeiro erro
		"passfail": false,

		// verdadeiro (true) para permitir ++ e --
		"plusplus": false,

		// verdadeiro (true) para permitir . e [^...]. em RegExp
		"regexp": false,

		// verdadeiro (true) se as funções/variáveis globais Rhino devem ser predefinidos
		"rhino": false,

		// verdadeiro (true) para permitir que não haja `use strict` pragma
		"sloppy": false,

		// verdadeiro (true) se os métodos de bloqueio ('...Sync') podem ser usados.
		"stupid": false,

		// verdadeiro (true) para permitir subíndices ineficientes
		"sub": false,

		// verdadeiro (true) para permitir comentários TODO
		"todo": false,

		// verdadeiro (true) para permitir parâmetros nunca usados
		"unparam": false,

		// verdadeiro (true) para permitir mais de 1 variável em uma função
		"vars": false,

		// verdadeiro (true) para ignorar as regras de espaçamento
		"white": false
	},

	// Mapeamentos adicionais de uma extensão arquivo ao nome da linguagem
	"language.fileExtensions": {},

	// Mapeamentos adicionais de um nome de arquivo ao nome da linguagem
	"language.fileNames": {},

	// Tempo em milisegundos para a espera dos inspetores de código assíncronos
	"linting.asyncTimeout": 10000,

	// verdadeiro (true) para agrupar painel de sugestões
	"linting.collapsed": false,

	// verdadeiro (true) para habilitar a inspeção do código
	"linting.enabled": true,

	// Vetores de inspetores de código que executam primeiro
	"linting.prefer": [],

	// verdadeiro (true) para executar somente os provedores especificados pelo linting.prefer
	"linting.usePreferredOnly": false,

	// verdadeiro (true) para habilitar o Live Preview experimental
	"livedev.multibrowser": false,

	// Máximo de sugestões de códigos exibidos ao mesmo tempo
	"maxCodeHints": 50,

	// true to enable code only mode and hide all other UI elements in Brackets
	"noDistractions": false,

	// true to collapse panes after the last file from the pane is closed via pane header close button
	"pane.mergePanesWhenLastFileClosed": false,

	// Toggle when to show the close and flip-view buttons on the header.
	"pane.showPaneHeaderButtons": "hover",

	// falso (false) para desabilitar a abertura do arquivo de preferências em tela dividida
	"preferencesView.openPrefsInSplitView": true,

	// falso (false) para desabilitar a abertura do arquivo de preferências no topo do painel lateral esquerdo
	"preferencesView.openUserPrefsInSecondPane": true,

	// A URL do proxy utilizado para a instalação das extensões
	"proxy": "",

	// verdadeiro (true) pra habilitar  Visualização Rápida/Quick View
	"quickview.enabled": true,

	// verdadeiro (true) para mostrar uma prévia de imagem para URLs sem extensões
	"quickview.extensionlessImagePreview": true,

	// Enable/disable navigation in recent files
	"recent-files.navigation": true,

	// verdadeiro (true) para habilitar o scrolling após o fim do arquivo
	"scrollPastEnd": false,

	// falso (false) para desabilitar todos as sugestões de código
	"showCodeHints": true,

	// Mantenha o cursor visível quando houver uma seleção de texto
	"showCursorWhenSelecting": false,

	// verdadeiro (true) para mostrar o número das linhas na borda "gutter" as esquerda do editor
	"showLineNumbers": true,

	// Identar automáticamente quando se criar um novo bloco
	"smartIndent": true,

	// falso (false) para desabilitar o comportamento de "soft tabs"
	"softTabs": true,

	// verdadeiro (true) para ordenar os diretórios no topo da árvore de projetos
	"sortDirectoriesFirst": false,

	// Quantidade de espaços utilizados na identações baseada em espaços
	"spaceUnits": 4,

	// Número da porta do servidor que será utilizada para o Live Preview
	"staticserver.port": 0,

	// verdadeiro (true) para ressaltar a linha atual que o cursor se encontra
	"styleActiveLine": false,

	// Quantidade de espaços utilizados pelo tab
	"tabSize": 4,

	// Selecionar um tema para Brackets
	"themes.theme": "light-theme",

	// verdadeiro (true) para permitir barras de rolagem customizadas
	"themes.themeScrollbars": true,

	// verdadeiro (true) para gerar cores utilizando hexadecimais maiúsculas no editor de cores
	"uppercaseColors": false,

	// verdadeiro (true) para usar tabs ao invés de espaços
	"useTabChar": false,

	// Ajustar linhas que ultrapassam a largura do editor
	"wordWrap": true
}
